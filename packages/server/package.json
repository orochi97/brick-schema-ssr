{
  "name": "@brick/server",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development ts-node src/index.ts",
    "compile:react": "vite build --ssr render/react/index.ts --config render/react/vite.config.mts",
    "compile:vue": "vite build --ssr render/vue/index.ts --config render/vue/vite.config.mts",
    "compile:solid": "vite build --ssr render/solid/index.ts --config render/solid/vite.config.mts",
    "precompile": "rm -rf lib",
    "compile": "pnpm compile:react && pnpm compile:vue && pnpm compile:solid",
    "tsc": "tsc && resolve-tspaths",
    "prebuild": "rm -rf dist",
    "build": "pnpm compile && pnpm tsc",
    "start": "NODE_ENV=production node dist/index.js"
  },
