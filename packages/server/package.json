    "@brick/vue": "workspace:*",
    "@koa/cors": "^5.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "csso": "^5.0.5",
    "i18next": "^24.2.1",
